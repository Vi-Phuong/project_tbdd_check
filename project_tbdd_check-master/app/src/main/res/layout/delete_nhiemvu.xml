<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/maunen_editnv"
    >
    <!--
Bạn cần tạo file dialog_background.xml để bo góc nền trắng -->

    <ImageView
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/warning"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp"/>
    <!-- Thêm icon cảnh báo vào drawable -->
    <TextView
        android:id="@+id/tv_delete_message"
        android:layout_width="match_parent"
        android:layout_height ="wrap_content"
        android:gravity="center"
        android:text="Bạn có chắc muốn xóa nhiệm vụ này không?"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:layout_marginBottom="24dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Nút "Hủy", tôi đổi chữ từ "Lưu" thành "Hủy" cho đúng ngữ cảnh -->

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:text="Hủy"
            android:textColor="#888888" />        <!-- Nút "Xóa" (màu cam) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_delete_confirm"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/buton_orange"
            android:text="Xóa"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>



