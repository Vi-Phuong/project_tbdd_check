<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- PHẦN ĐẦU: TRANG CHỦ + ICON -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="30dp">

            <!-- Tiêu đề -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Trang chủ"
                android:textSize="12pt"
                android:textStyle="bold"
                android:textColor="#000000" />

            <!-- Icon thông báo -->
            <ImageButton
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/anhthongbao"
                android:contentDescription="Thông báo"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:padding="4dp" />

            <!-- Icon cài đặt -->
            <ImageButton
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/anhcaidat"
                android:contentDescription="Cài đặt"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                android:padding="4dp" />
        </LinearLayout>

        <!-- Thông báo -->
        <TextView
            android:id="@+id/tvThongbao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFB952"
            android:padding="12dp"
            android:text="Mỗi ngày một từ – Mở rộng cả thế giới! \n Tích lũy từ vựng – Bứt phá tiếng Anh!"
            android:textColor="#000000"
            android:textSize="8pt"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <!-- Khoảng cách -->
        <View
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <!-- Hàng: Tiến độ và Luyện nghe -->
        <!-- android:divider + showDividers có đường chia (hoặc khoảng trống) giữa các phần tử con trong LinearLayout cha  -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:divider="?android:attr/dividerHorizontal"
            android:showDividers="middle"
            android:dividerPadding="50dp"
            android:weightSum="2">

            <!-- Tiến độ -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_tiendo"
                android:padding="16dp">

                <!-- Hình ảnh -->
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/tiendo" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Theo dõi tiến độ\nSố từ đã học"
                    android:textAlignment="center"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>

            <!-- Luyện nghe -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="180dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_luyennghe"
                android:padding="16dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:src="@drawable/nghe" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luyện nghe  phát âm"
                    android:textSize="14sp"
                    android:paddingTop="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Khoảng cách -->
        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <!-- Chủ đề từ vựng -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chủ đề từ vựng"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingBottom="8dp" />

        <!-- Các nút chủ đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:gravity="center">

            <Button
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                android:backgroundTint="#7FB6D1"
                android:drawableTop="@drawable/animals"
                android:text="Animals" />

            <Button
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:drawableTop="@drawable/food"
                android:layout_weight="1"
                android:text="Food"
                android:backgroundTint="#62DB67"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:drawableTop="@drawable/travel"
                android:layout_weight="1"
                android:text="Travel"
                android:backgroundTint="#CABA28"/>

            <Button
                android:layout_width="40dp"
                android:layout_height="80dp"
                android:drawableTop="@drawable/jobs"
                android:layout_weight="1"
                android:text="Jobs"
                android:backgroundTint="#FF8053"/>
        </LinearLayout>

        <!-- Khoảng cách -->
        <View
            android:layout_width="match_parent"
            android:layout_height="12dp" />

        <!-- Các chức năng phụ -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:gravity="center">

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="ListCheck"
                android:backgroundTint="#DCD9D9"
                android:textStyle="bold"
                android:textColor="#000"/>

            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="80dp"
                android:text="Trò chơi ghép từ"
                android:backgroundTint="#DCD9D9"
                android:textStyle="bold"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Khoảng cách để đẩy thanh nav xuống -->
        <View
            android:layout_width="match_parent"
            android:layout_height="150dp" />

        <!-- Thanh điều hướng dưới cùng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="#DDDDDD"
            android:weightSum="4">

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/home"
                android:contentDescription="Home" />

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/book"
                android:contentDescription="Học từ vựng"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/checklist"
                android:contentDescription="Checklist"/>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/game"
                android:contentDescription="Game"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>