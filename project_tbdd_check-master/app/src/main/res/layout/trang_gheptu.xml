<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.gheptu.VictoryActivity">

    <!-- Trang ghep tu -->



    <!-- Nội dung chính -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F8FAFF"
        android:orientation="vertical"

        >



        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="12dp"
            android:text="Ghép thẻ vui!"
            android:textColor="#ffe085"
            android:textSize="26sp"
            android:textStyle="bold" />





        <!-- Thanh điểm + thời gian -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"

            android:gravity="center"
            android:orientation="horizontal"
            >



            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:contentDescription="dong ho"
                android:src="@drawable/clock" />



            <TextView
                android:id="@+id/tvTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="12dp"
                android:text="00:60"
                android:textColor="#FF9800"
                android:textSize="16sp" />


            <ImageButton
                android:id="@+id/imbtnQuanLiTu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:contentDescription="Quản lý từ vựng"
                android:src="@drawable/quan_li" />


        </LinearLayout>



        <!-- Lưới thẻ -->

        <GridLayout
            android:id="@+id/gridLayout"
            android:layout_width="match_parent"
            android:layout_height="420dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:alignmentMode="alignMargins"
            android:columnCount="3"
            android:rowCount="4"
            android:padding="20dp"
            android:useDefaultMargins="true" />
        <Button
            android:id="@+id/btnHoanThanh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#EDBFBF"
            android:text="Hoàn thành"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            />




       <include layout="@layout/thanh_menu"/>




    </LinearLayout>







</androidx.constraintlayout.widget.ConstraintLayout>