<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="39dp"
        android:background="#DDDDDD"
        android:orientation="horizontal"
        android:weightSum="4">

        <ImageButton
            android:id="@+id/imbtnHome"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Home"
            android:src="@drawable/home" />

        <ImageButton
            android:id="@+id/imbtnHoc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Học từ vựng"
            android:src="@drawable/book" />

        <ImageButton
            android:id="@+id/imbtnCheckList"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Checklist"
            android:src="@drawable/checklist" />

        <ImageButton
            android:id="@+id/imbtnGame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="Game"
            android:src="@drawable/game" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>