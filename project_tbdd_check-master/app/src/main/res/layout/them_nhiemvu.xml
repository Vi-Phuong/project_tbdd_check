<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/mauvangnhat_dangki">
    
    <!-- Tiêu đề cho phần Thêm mới -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"
        android:text="Thêm nhiệm vụ mới"
        android:textColor="#E67E22"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tên nhiệm vụ:"
        android:textColor="#D81B60"
        android:textStyle="bold"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_hong"
        android:hint="Nhập tên nhiệm vụ..."
        android:padding="12dp"
        android:textColor="#333333"
        android:minHeight="50dp" />

    <!-- Thêm ô nhập Ví dụ/Chi tiết theo yêu cầu -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chi tiết / Ví dụ:"
        android:textColor="#D81B60"
        android:textStyle="bold"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <EditText
        android:id="@+id/et_add_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_hong"
        android:hint="Ví dụ (không bắt buộc)"
        android:padding="12dp"
        android:textColor="#333333"
        android:minHeight="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_white"
            android:text="Hủy"
            android:textColor="#888888" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add_save"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/buton_orange"
            android:text="Thêm mới"
            android:textColor="@android:color/white" />
    </LinearLayout>

</LinearLayout>